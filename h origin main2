[32m+[m[32m            signup()[m
[32m+[m[32m        elif choice == "2":[m
[32m+[m[32m            user = login()[m
[32m+[m[32m            if user:[m
[32m+[m[32m                notepad_menu()[m
[32m+[m[32m        elif choice == "3":[m
[32m+[m[32m            print("Goodbye!")[m
[32m+[m[32m            break[m
